.page-container {
    padding: 40px;
    max-width: 1400px;
    margin: 0 auto;
    min-height: 100vh;
    background-color: #f0f2f5;
}

.page-header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
}

.back-button {
    background: white;
    border: 2px solid #3d4d5c;
    color: #3d4d5c;
    padding: 10px 20px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
}

.back-button:hover {
    background-color: #3d4d5c;
    color: white;
}

.page-header h1 {
    color: #3d4d5c;
    margin: 0;
    font-size: 32px;
}

.admin-tabs {
    display: flex;
    gap: 15px;
    margin-bottom: 30px;
}

.tab-button {
    flex: 1;
    padding: 16px 24px;
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    color: #3d4d5c;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
}

.tab-button:hover {
    border-color: #4caf50;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(76, 175, 80, 0.2);
}

.tab-button.active {
    background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
    color: white;
    border-color: #4caf50;
    box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
}

.tab-content {
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Users Tab */
.users-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 24px;
}

.user-card {
    background: white;
    padding: 24px;
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: all 0.3s;
}

.user-card:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
}

.user-card-header {
    display: flex;
    gap: 16px;
    margin-bottom: 20px;
    padding-bottom: 16px;
    border-bottom: 2px solid #f0f2f5;
}

.user-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 24px;
    font-weight: 700;
    text-transform: uppercase;
    flex-shrink: 0;
}

.user-info h3 {
    margin: 0 0 6px 0;
    color: #3d4d5c;
    font-size: 20px;
    font-weight: 700;
}

.user-username {
    margin: 0 0 4px 0;
    color: #667eea;
    font-size: 14px;
    font-weight: 600;
}

.user-email {
    margin: 0;
    color: #999;
    font-size: 13px;
}

.user-controls {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.control-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.control-group label {
    font-size: 14px;
    font-weight: 600;
    color: #3d4d5c;
}

.control-select {
    padding: 12px 16px;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    font-size: 15px;
    color: #3d4d5c;
    background: white;
    cursor: pointer;
    transition: all 0.3s;
}

.control-select:hover {
    border-color: #4caf50;
}

.control-select:focus {
    outline: none;
    border-color: #4caf50;
    box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
}

.control-select:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    background-color: #f5f5f5;
}

.user-district-badge {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    align-self: flex-start;
}

.user-role-badge {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: white;
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    text-align: center;
}

/* Parking Spots Tab */
.create-spot-form {
    background: white;
    padding: 24px;
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    margin-bottom: 30px;
}

.create-spot-form h2 {
    margin: 0 0 20px 0;
    color: #3d4d5c;
    font-size: 22px;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr auto;
    gap: 15px;
    align-items: end;
}

.form-input,
.form-select {
    padding: 14px 16px;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    font-size: 15px;
    color: #3d4d5c;
    transition: all 0.3s;
}

.form-input:focus,
.form-select:focus {
    outline: none;
    border-color: #4caf50;
    box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
}

.create-button {
    padding: 14px 24px;
    background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
    border: none;
    border-radius: 8px;
    color: white;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 8px;
    white-space: nowrap;
}

.create-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
}

.parking-spots-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 24px;
}

.parking-spot-card {
    background: white;
    padding: 24px;
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: all 0.3s;
}

.parking-spot-card:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
}

.spot-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 2px solid #f0f2f5;
}

.spot-card-header h3 {
    margin: 0;
    color: #3d4d5c;
    font-size: 22px;
    font-weight: 700;
}

.delete-button {
    background: #e74c3c;
    border: none;
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
}

.delete-button:hover {
    background: #c0392b;
    transform: scale(1.1);
}

.spot-details {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 20px;
}

.spot-badge {
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    align-self: flex-start;
}

.district-tag {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.spot-owner {
    background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
    color: #1a5f7a;
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    align-self: flex-start;
}

.spot-unassigned {
    background: #f5f5f5;
    color: #999;
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    align-self: flex-start;
}

.spot-status {
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    text-align: center;
}

.spot-status.available {
    background: #d4edda;
    color: #155724;
}

.spot-status.occupied {
    background: #f8d7da;
    color: #721c24;
}

.spot-assign {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.spot-assign label {
    font-size: 14px;
    font-weight: 600;
    color: #3d4d5c;
}

.assign-select {
    padding: 12px 16px;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    font-size: 15px;
    color: #3d4d5c;
    background: white;
    cursor: pointer;
    transition: all 0.3s;
}

.assign-select:hover {
    border-color: #4caf50;
}

.assign-select:focus {
    outline: none;
    border-color: #4caf50;
    box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
}

.loading {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    font-size: 24px;
    color: #3d4d5c;
    background-color: #f5f5f5;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .users-grid,
    .parking-spots-grid {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }

    .form-row {
        grid-template-columns: 1fr;
    }

    .create-button {
        justify-content: center;
    }
}

@media (max-width: 768px) {
    .page-container {
        padding: 20px;
    }

    .admin-tabs {
        flex-direction: column;
    }

    .users-grid,
    .parking-spots-grid {
        grid-template-columns: 1fr;
    }

    .page-header h1 {
        font-size: 24px;
    }
}
